@page
@model TecualaBaby.Pages.EvaluaConocimientosOportunidad.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Conocimientos Oportunidad</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="eva_evalua_conocimientos_oportunidad.IdConocimientoDet" />
            <div class="form-group">
                <label asp-for="eva_evalua_conocimientos_oportunidad.IdGenCalificacion" class="control-label"></label>
                <select asp-for="eva_evalua_conocimientos_oportunidad.IdGenCalificacion" class="form-control" asp-items="ViewBag.IdGenCalificacion"></select>
                <span asp-validation-for="eva_evalua_conocimientos_oportunidad.IdGenCalificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="eva_evalua_conocimientos_oportunidad.Calificacion" class="control-label"></label>
                <input asp-for="eva_evalua_conocimientos_oportunidad.Calificacion" data-val-required="Ingrese la Calificacion" class="form-control" />
                <span asp-validation-for="eva_evalua_conocimientos_oportunidad.Calificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="eva_evalua_conocimientos_oportunidad.FechaEvaluacion" class="control-label"></label>
                <input asp-for="eva_evalua_conocimientos_oportunidad.FechaEvaluacion" data-val-required="Ingrese la Fecha de Evaluacion" class="form-control" />
                <span asp-validation-for="eva_evalua_conocimientos_oportunidad.FechaEvaluacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="eva_evalua_conocimientos_oportunidad.IdPersona" class="control-label"></label>
                <select asp-for="eva_evalua_conocimientos_oportunidad.IdPersona" class="form-control" asp-items="ViewBag.IdPersona"></select>
            </div>
            <div class="form-group">
                <label asp-for="eva_evalua_conocimientos_oportunidad.IdCompetencia" class="control-label"></label>
                <input asp-for="eva_evalua_conocimientos_oportunidad.IdCompetencia" class="form-control" />
                <span asp-validation-for="eva_evalua_conocimientos_oportunidad.IdCompetencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="eva_evalua_conocimientos_oportunidad.IdTipoCompetencia" class="control-label"></label>
                <select asp-for="eva_evalua_conocimientos_oportunidad.IdTipoCompetencia" class="form-control" asp-items="ViewBag.IdTipoCompetencia"></select>
            </div>
            <div class="form-group">
                <label asp-for="eva_evalua_conocimientos_oportunidad.IdOportunidad" class="control-label"></label>
                <select asp-for="eva_evalua_conocimientos_oportunidad.IdOportunidad" class="form-control" asp-items="ViewBag.IdOportunidad"></select>
            </div>
            <div class="form-group">
                <label asp-for="eva_evalua_conocimientos_oportunidad.IdConocimiento" class="control-label"></label>
                <select asp-for="eva_evalua_conocimientos_oportunidad.IdConocimiento" class="form-control" asp-items="ViewBag.IdConocimiento"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
