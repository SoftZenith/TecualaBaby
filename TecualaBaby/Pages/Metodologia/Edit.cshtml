@page
@model TecualaBaby.Pages.Metodologia.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Metodologia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Metodologia.Id" />
            <div class="form-group">
                <label asp-for="Metodologia.Clave" class="control-label"></label>
                <input asp-for="Metodologia.Clave" class="form-control"  data-val-required="Ingrese la clave, solo numeros" />
                <span asp-validation-for="Metodologia.Clave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Metodologia.Descripcion" class="control-label"></label>
                <input asp-for="Metodologia.Descripcion" class="form-control" data-val-required="Ingrese la Descripcion"/>
                <span asp-validation-for="Metodologia.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Metodologia.Explicacion" class="control-label"></label>
                <input asp-for="Metodologia.Explicacion" class="form-control" data-val-required="Ingrese la Explicacion" />
                <span asp-validation-for="Metodologia.Explicacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
