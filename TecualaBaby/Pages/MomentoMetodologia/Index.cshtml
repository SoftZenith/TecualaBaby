@page
@model TecualaBaby.Pages.MomentoMetodologia.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Catalogo de Momentos en una Metodologia</h2>

<p>
    <a asp-page="Create">Crear Nuevo Momento en una Metodologia</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MomentosMetodologia[0].Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MomentosMetodologia[0].Objetivo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MomentosMetodologia[0].Secuencia)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.MomentosMetodologia[0].Metodologia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MomentosMetodologia[0].PlantillaMetodologia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MomentosMetodologia) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Objetivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Secuencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Metodologia.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlantillaMetodologia.Descripcion)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
