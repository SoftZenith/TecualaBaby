@page
@model TecualaBaby.Pages.EvaluaCompetenciasResponsables.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Catalogo Competencias Responsables</h2>

<p>
    <a asp-page="Create">Crear Una Nueva Competencias Responsables</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.eva_evalua_competencias_responsables[0].IdTipoGenResponsable)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.eva_evalua_competencias_responsables[0].IdGenResponsable)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.eva_evalua_competencias_responsables[0].Competencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eva_evalua_competencias_responsables[0].CompetenciasPersona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eva_evalua_competencias_responsables[0].Oportunidades)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.eva_evalua_competencias_responsables) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoGenResponsable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdGenResponsable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Competencia.IdCompetencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompetenciasPersona.Justificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oportunidades.FechaEvaluacion)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdResponsable">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.IdResponsable">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.IdResponsable">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
