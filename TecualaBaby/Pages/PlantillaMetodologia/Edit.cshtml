@page
@model TecualaBaby.Pages.PlantillaMetodologia.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Plantilla Metodologia</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="eva_plantilla_metodologia.IdPlantillaMetodo" />
            <div class="form-group">
                <label asp-for="eva_plantilla_metodologia.DesPlantillaMetodo" class="control-label"></label>
                <input asp-for="eva_plantilla_metodologia.DesPlantillaMetodo" data-val-required="Ingrese la Descripcion" class="form-control" />
                <span asp-validation-for="eva_plantilla_metodologia.DesPlantillaMetodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="eva_plantilla_metodologia.VersionActual" /> @Html.DisplayNameFor(model => model.eva_plantilla_metodologia.VersionActual)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="eva_plantilla_metodologia.IdMetodologia" class="control-label"></label>
                <select asp-for="eva_plantilla_metodologia.IdMetodologia" class="form-control" asp-items="ViewBag.IdMetodologia"></select>
                <span asp-validation-for="eva_plantilla_metodologia.IdMetodologia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
