@page
@model TecualaBaby.Pages.PlantillaMetodologia.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Catalogo de Plantillas de una Metodologia</h2>

<p>
    <a asp-page="Create">Crear una nueva plantilla</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PlantillaMetodologia[0].Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlantillaMetodologia[0].FechaRegistro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlantillaMetodologia[0].VersionActual)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.PlantillaMetodologia[0].Metodologia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PlantillaMetodologia) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VersionActual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Metodologia.Descripcion)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
