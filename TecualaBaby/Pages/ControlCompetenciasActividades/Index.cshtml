            <th>
                @Html.DisplayNameFor(model => model.eva_control_competencias_actividades[0].IdTipoActividadSug)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eva_control_competencias_actividades[0].Competencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eva_control_competencias_actividades[0].CompetenciasPersona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eva_control_competencias_actividades[0].Oportunidades)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.eva_control_competencias_actividades) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DesActividad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SugeridaPor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EligioAlumno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdActividadSugerida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoActividadSug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Competencia.IdCompetencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompetenciasPersona.Justificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oportunidades.FechaEvaluacion)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdActividad">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.IdActividad">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.IdActividad">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
